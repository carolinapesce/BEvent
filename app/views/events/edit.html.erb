
<div class="admin-event-edit-container">
  <%= link_to root_path do %>
    <i class="fa-solid fa-arrow-left"></i>
  <% end %>
  <h1 class="admin-event-edit-title">Modifica Evento</h1>
  
  <div class="admin-event-edit-card">
    <%= form_for @event, url: event_path(@event), method: :patch do |f| %>
      <div class="form-grid">
        <!-- Prima colonna -->
        <div class="form-column">
          <div class="form-group">
            <%= f.label :title, 'Titolo Evento', class: 'form-label' %>
            <%= f.text_field :title, class: 'form-input' %>
          </div>
          
          <div class="form-group">
            <%= f.label :description, 'Descrizione', class: 'form-label' %>
            <%= f.text_area :description, rows: 4, class: 'form-input' %>
          </div>
          
          <div class="form-group">
            <%= f.label :category, 'Categoria', class: 'form-label' %>
            <%= f.text_field :category, class: 'form-input' %>
          </div>
          
          <div class="form-group">
            <%= f.label :event_type, 'Tipo di Evento', class: 'form-label' %>
            <%= f.text_field :event_type, class: 'form-input' %>
          </div>
          
          <div class="form-group">
            <%= f.label :charity_event, 'Evento Benefico?', class: 'form-label' %>
            <%= f.check_box :charity_event, class: 'form-checkbox' %>
          </div>
        </div>
        
        <!-- Seconda colonna -->
        <div class="form-column">
          <div class="form-group">
            <%= f.label :start_datetime, 'Data e Ora Inizio', class: 'form-label' %>
            <%= f.datetime_local_field :start_datetime, class: 'form-input' %>
          </div>
          
          <div class="form-group">
            <%= f.label :end_datetime, 'Data e Ora Fine', class: 'form-label' %>
            <%= f.datetime_local_field :end_datetime, class: 'form-input' %>
          </div>
          
          <div class="form-group">
            <%= f.label :max_participants, 'Numero Massimo Partecipanti', class: 'form-label' %>
            <%= f.number_field :max_participants, class: 'form-input' %>
          </div>

          <div class="form-group">
            <%= f.label :current_participants, 'Numero Attuale Partecipanti', class: 'form-label' %>
            <%= f.number_field :current_participants, min: 0, class: 'form-input' %>
          </div>
          
          <div class="form-group">
            <%= f.label :event_price, 'Prezzo Evento (€)', class: 'form-label' %>
            <%= f.number_field :event_price, step: 0.01, class: 'form-input' %>
          </div>
        </div>
        
        <!-- Terza colonna -->
        <div class="form-column">
          <div class="form-group">
            <%= f.label :address, 'Indirizzo', class: 'form-label' %>
            <%= f.text_field :address, class: 'form-input' %>
          </div>
          
          <div class="form-group">
            <%= f.label :city, 'Città', class: 'form-label' %>
            <%= f.text_field :city, class: 'form-input' %>
          </div>
          
          <div class="form-group">
            <%= f.label :country, 'Paese', class: 'form-label' %>
            <%= f.text_field :country, class: 'form-input' %>
          </div>
          
          <% if @event.charity_event %>
            <div class="form-group">
              <%= f.label :beneficiary, 'Beneficiario', class: 'form-label' %>
              <%= f.text_field :beneficiary, class: 'form-input' %>
            </div>
            
            <div class="form-group">
              <%= f.label :fundraiser_goal, 'Obiettivo Raccolta (€)', class: 'form-label' %>
              <%= f.number_field :fundraiser_goal, step: 0.01, class: 'form-input' %>
            </div>
          <% end %>
        </div>
      </div>
      
      <div class="form-actions">
        <%= f.submit 'Salva Modifiche', class: 'form-submit-btn' %>
        <%= link_to 'Annulla', user_my_events_path(current_user), class: 'form-cancel-btn' %>
      </div>
    <% end %>
  </div>
</div>