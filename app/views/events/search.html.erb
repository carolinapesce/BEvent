# Pagina di ricerca degli eventi
<div class="page">
    <%= render "devise/shared/navbar" %>

    <div class="search-page">
        <!-- Colonna filtri (sinistra) -->
        <div class="filters-column">
            <h2 class="filters-title">Filtri</h2>

            <!-- Filtro Data -->
            <div class="filter-section">
                <h3 class="filter-label">Data</h3>
                <div class="filter-inputs">
                    <label for="start-date">Da:</label>
                    <input type="date" id="start-date" name="start-date">

                    <label for="end-date">A:</label>
                    <input type="date" id="end-date" name="end-date">
                </div>
            </div>

            <!-- Filtro Prezzo -->
            <div class="filter-section">
                <h3 class="filter-label">Prezzo</h3>
                <div class="filter-inputs">
                    <label for="min-price">Min:</label>
                    <input type="number" id="min-price" name="min-price" placeholder="€">

                    <label for="max-price">Max:</label>
                    <input type="number" id="max-price" name="max-price" placeholder="€">
                </div>
            </div>

            <!-- Filtro Orario -->
            <div class="filter-section">
                <h3 class="filter-label">Orario</h3>
                <div class="filter-checkboxes">
                    <label>
                        <input type="checkbox" name="time" value="morning"> Mattina
                    </label>
                    <label>
                        <input type="checkbox" name="time" value="afternoon"> Pomeriggio
                    </label>
                    <label>
                        <input type="checkbox" name="time" value="evening"> Sera
                    </label>
                </div>
            </div>

            <!-- Filtro Categorie -->
            <div class="filter-section">
                <h3 class="filter-label">Categorie</h3>
                <div class="filter-checkboxes">
                    <label>
                        <input type="checkbox" name="category" value="concert"> Concerto
                    </label>
                    <label>
                        <input type="checkbox" name="category" value="dinner"> Cena
                    </label>
                    <label>
                        <input type="checkbox" name="category" value="festival"> Festival
                    </label>
                </div>
                <a href="#" class="see-more-link">See More</a>
            </div>
        </div>

        <!-- Sezione principale (destra) -->
        <div class="main-content">
            <!-- Card degli eventi -->
            <div class="events-grid">
                <div class="event-card">
                    <img class="event-image">
                    <div class="event-frame">
                        <div class="event-date">
                            <span class="month"></span>
                            <span class="day"></span>
                        </div>

                        <div class="event-details">
                            <h3 class="event-title"></h3>
                            <p class="event-location"></p>
                            <p class="event-time"></p>
                            <p class="event-price"></p>
                        </div>
                     </div>
                </div>
            </div>

            <!-- Mappa -->
            <div class="map-container">
                <div id="map" style="height: 400px; width: 100%;"></div>
                    <button class="expand-map-button">Espandi Mappa</button>
                </div>
            </div>
        </div>
    </div>

    <%= render "devise/shared/footer" %>
</div>