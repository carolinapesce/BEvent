<%= render "devise/shared/navbar" %>

<div class="page">
    <div class= "show-back">
        <i class="fa-solid fa-arrow-left"></i>
    </div>
    <div class= "show-page">    
        <div class="banner-image">
            <%= image_tag "card1.png", alt: "Event Image", class: "event-image" %>
        </div>

        <div class="event-container">
            <div class="event-header">
                <h1 class="event-title">THE MOTANS GEOGRAPHIC 2025</h1>
                <div class="event-icons">
                    <i class="fa-regular fa-heart"></i>
                    <i class="fa-solid fa-share"></i>
                </div>
            </div>

            <div class="event-details">
                <div class="event-info">
                    <h3 class="info-title">Date and Time</h3>
                    <p class="info-date"><i class="fa-regular fa-calendar"></i> VenerdÃ¬, 11 Aprile 2025</p>
                    <p class="info-time"><i class="fa-regular fa-clock"></i> 8:00 PM</p>
                </div>

                <div class="event-buy">
                    <button class="buy-btn">ðŸŽŸ Compra un biglietto</button>
                    <div class="tckt-info">
                        <h4>Ticket Information</h4>
                        <p><i class="fa-solid fa-ticket"></i> Gratis</p>
                    </div>
                </div>
            </div>

            <div class="event-location">
                <h3>Location</h3>
                <p><i class="fa-solid fa-location-dot"></i> Indirizzo dell'evento</p>
                <div class="map"></div>
            </div>

            <div class="event-host">
                <h3>Hosted by</h3>
                <div class="host-info">
                    <%= image_tag "Profile.png", class: "host-image" %>
                    <div class="host-details">
                        <p class="host-name">Diego</p>
                        <button class="follow-btn">+ Follow</button>
                    </div>
                </div>
            </div>

            <div class="event-description">
                <h3>Description</h3>
                <p>Lorem ipsum dolor sit amet consectetur...</p>
            </div>

            <div class="tags">
                <h3>Tags</h3>
                <div class="tag-list">
                    <span class="tag">#LivePerformance</span>
                    <span class="tag">#SeasonalEvent</span>
                    <span class="tag">#Music</span>
                </div>
            </div>

            <div class="others">
                <h3>Other events you may like</h3>
                <div class="event-suggestions">
                    <div class="event-card">
                        <img src="event1.png" alt="Event 1">
                        <p>Evento 1</p>
                    </div>
                    <div class="event-card">
                        <img src="event2.png" alt="Event 2">
                        <p>Evento 2</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

</div>
