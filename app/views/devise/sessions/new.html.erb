<div class="container">
  <div class="design">design area</div>
  <div class="login">
    <h2 class = "title">Log in</h2> 

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="field txt-field">
        <%= f.email_field :email, autofocus: true, placeholder: "Inserisci la tua email", autocomplete: "email" %>
      </div>
  
      <div class="field txt-field">
        <%= f.password_field :password, placeholder: "Inserisci la tua password",autocomplete: "current-password" %>
      </div>
  
      <% if devise_mapping.rememberable? %>
        <div class="field chckbox-field">
          <%= f.check_box :remember_me %>
          <label for="user_remember_me" class="checkmark"></label>
          <%= f.label :remember_me, class: "remember-label" %>
        </div>
      <% end %>
  
      <div class="actions">
        <%= f.submit "Log in", class: "btn-submit" %>
      </div>
    <% end %>
  
    <%= render "devise/shared/links" %>
  </div>
</div>
