<h2 class = "title">Log in</h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="field">
    
    <%= f.email_field :email, autofocus: true, placeholder: "Inserisci la tua email", autocomplete: "email" %>
  </div>

  <div class="field">
    
    <%= f.password_field :password, placeholder: "Inserisci la tua password",autocomplete: "current-password" %>
  </div>

  <% if devise_mapping.rememberable? %>
    <div class="field">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class: "btn-submit" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
