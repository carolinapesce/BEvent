<h1>Gestione Eventi</h1>

<table>
  <thead>
    <tr>
      <th>Titolo</th>
      <th>Descrizione</th>
      <th>Data di inizio</th>
      <th>Azioni</th>
    </tr>
  </thead>
  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= event.title %></td>
        <td><%= event.start_datetime.strftime("%d/%m/%Y %H:%M") %></td>
        <td><%= event.end_datetime.strftime("%d/%m/%Y %H:%M") %></td>
        <td>
          <%= link_to 'Modifica', edit_admin_event_path(event) %> |
          <%= link_to 'Elimina', admin_event_path(event), method: :delete, data: { confirm: 'Sei sicuro?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Crea un nuovo evento', new_admin_event_path %>