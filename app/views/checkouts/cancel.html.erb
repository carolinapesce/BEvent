<%= render "devise/shared/navbar" %>
<div class="shopping-menu">
  
  <div class="sidebar">
    <h2>Acquisti</h2>
    <ul>
      <li><%= link_to "Carrello", cart_path(@current_cart)%></li>
      <li><%= link_to "I miei ordini", checkouts_index_path(current_user.id)%></li>
      <li><%= link_to "I miei biglietti", tickets_path(current_user.id)%></li>
      <li><%= link_to "Esito Transazione", "#", onclick: "return false;" %></li>
    </ul>
  </div>

  <div class="shopping-content">
    <h2>Pagamento non riuscito</h2>
    <div class="alert alert-danger">
    <%= flash[:alert] = "Si è verificato un errore durante il pagamento. Riprova più tardi." %>
    </div>
    <p>Ci dispiace, ma il pagamento non è andato a buon fine. Riprova più tardi.</p>

    <%= button_to checkouts_create_path, data: { turbo: false }, class: "btn proceed-btn" do %>
      Riprova il pagamento <i class="fa-solid fa-chevron-right"></i>
    <% end %>
  </div>
</div>


<%= render "devise/shared/footer" %>